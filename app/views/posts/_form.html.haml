= form_for(@post) do |f|
  = f.error_messages
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :state
    %br/
    = f.collection_select :state, @post.state_transitions, :event, :human_to_name#, include_blank: @post.human_state_name
  .actions
    = f.submit